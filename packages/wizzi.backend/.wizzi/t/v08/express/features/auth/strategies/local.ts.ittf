    export
        function createStrategy
            $if wzCtx.Build.useMongoDb
                set authUserModel = GetAuthUserModel()
            _ console.log('features.auth.strategies.local.createStrategy')
            return
                new Strategy
                    {
                        @ usernameField 'user[email]'
                        @ passwordField 'user[password]'
                    =>
