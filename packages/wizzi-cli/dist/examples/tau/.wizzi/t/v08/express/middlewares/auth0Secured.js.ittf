$group
    $params &md
    import
        @ Request
        @ Response
        from 'express'
    #
        # This is an example middleware that checks if the user is logged in.
        # If the user is not logged in, it stores the requested url in `returnTo` attribute
        # and then redirects to `/account/login`.
    export-default
        function getSecured
            log 'middleware.getSecured called'
            return
                function secured
                    param req
                    param res
                    param next
                    log 'middleware.secured called', req.user
                    if req.user
                        return
                            _ next
                    set req.session.returnTo = req.originalUrl
                    _ res.redirect('/account/login')
