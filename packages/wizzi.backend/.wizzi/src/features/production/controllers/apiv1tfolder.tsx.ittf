module
    
    $
        var ctrl = {
            name: 'ApiV1TFolder',
            path: '/api/v1/production/tfolder',
        }
    
    controller( &ctrl )
            
        $append imports
            import
                @ validateTFolder
                @ getTFolder
                @ updateTFolder
                @ invalidateCache
                from '../api/tfolder'
            +
            const myname = 'features/production/controllers/apiv1tfolder'

        _ this.router.get('/checkname/:name', this.getCheckTFolderName)
        _ this.router.get('/:owner/:name', this.getTFolder)
        _ this.router.put('/:owner/:name', this.putTFolder)
        
        $append handlers
            
            handler( getCheckTFolderName )

                log 'getCheckTFolderName.request.params', request.params
                log 'getCheckTFolderName.request.session.user.username', (request.session as any).user.username
                _ validateTFolder
                    @ (request.session as any).user.username
                    @ request.params.name
                    ._ then
                        =>
                            param result
                                :any
                            log 'getCheckTFolderName.result', result
                            _ sendSuccess
                                @ response
                                @ result
                    catch_fail( getCheckTFolderName )

            handler( getTFolder )

                log 'getTFolder.request.params', request.params
                _ getTFolder
                    @ request.params.owner
                    @ request.params.name
                    ._ then
                        =>
                            param result
                                :any
                            log 'getTFolder.result', result
                            _ sendSuccess
                                @ response
                                @ result
                    catch_fail( getTFolder )

            handler( putTFolder )

                log 'putTFolder.request.params', request.params
                log 'putTFolder.request.body', request.body
                _ updateTFolder
                    @ request.params.owner
                    @ request.params.name
                    @ request.body.description
                    @ JSON.stringify(request.body.packiFiles)
                    ._ then
                        =>
                            param result
                                :any
                            log 'putTFolder.result', result
                            _ invalidateCache
                                @ request.params.owner
                                @ request.params.name
                            _ sendSuccess
                                @ response
                                @ result
                    catch_fail( putTFolder )

