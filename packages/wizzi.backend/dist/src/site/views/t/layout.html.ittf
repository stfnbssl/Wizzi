$group
    $params &md

    $
        var ca = 'm-s color-header font-x font-w-s';
        var ca2 = 'color-header font-x font-w-s';

    head
        css /ittf/views/css/reset.css.ittf
        css /ittf/views/css/main.css.ittf
        css /ittf/views/css/header.css.ittf
        link
            rel preconnect
            href https://fonts.googleapis.com
        link
            rel preconnect
            href https://fonts.gstatic.com 
            crossorigin
        link 
            href https://fonts.googleapis.com/css2?family=Roboto:wght@300;500;700&display=swap
            rel stylesheet        
    body
        . flex-row space-between bg-color-header color-header
            . flex-row
                a( , /, ${ca2}
                    div
                        style width: 80px; margin-top: 5px; margin-left: 20px;
                        layout/t/images/logo(#efefef, #434343)
            . flex-row
                $if locals.user
                    a( Artifacts, /productions/artifacts, ${ca}
                    a( Packages, /productions/packages, ${ca}
                    a( Metas, /productions/metas, ${ca}
                    a( tFolders, /tfolders/tfolders, ${ca}
                
            . flex-row
                a( Docs, /, ${ca}
            . flex-row
                $if locals.user
                    a( Profile, /profile, ${ca}
                    a( Log Out, /logout, ${ca}
                $else
                    a( Log In, /login, ${ca}
        
        $hook