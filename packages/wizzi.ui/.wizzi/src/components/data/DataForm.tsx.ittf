module
    $
        var md = {
            name: "DataForm",
            props: [
                { name: "formDef", type: "FormDef", ref: true },
                { name: "values", type: "object" },
            ],
            styled: true
        }
    v08/ts/react/function(&md)
        $append imports
            import Box from '../widgets/Box'
            import
                @ FormDef
                from './types'
            import FormControl from './FormControl'
        
        < Box
            @ bg 'blue.4'
            @ color 'lime.9'
            @ width '600px'
            @ p 3
            < StyledRoot
                < StyledTitle
                    + { formDef.title }
                < StyledControls
                    id { formDef.id }
                    {
                        _ formDef.controls.map
                            =>
                                param control
                                param ndx
                                < FormControl
                                    @ key {ndx}
                                    @ control {control}
                                    @ value {values[control.id]}
                < StyledButtons
                    < StyledConfirm
                        @ onClick
                            =>
                                _ alert('Form confirm')
                        + Confirm
                    < StyledCancel
                        @ onClick
                            =>
                                _ alert('Form cancel')
                        + Cancel

        $append styles
            styled StyledRoot .div
                overflow hidden
                border-radius 3px
                background #fff
            styled StyledTitle .div
                font-weight 700
            styled StyledControls .div
            styled StyledButtons .div
                display flex
                flex-direction row
                justify-content space-between
            styled StyledConfirm .button
                color green
            styled StyledCancel .button
                color gray