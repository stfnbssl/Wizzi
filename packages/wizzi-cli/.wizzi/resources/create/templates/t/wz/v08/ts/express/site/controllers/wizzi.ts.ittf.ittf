$group

    $
        var lparen = '(';
    
    ${'$'}
        var ctrl = {
            name: 'Wizzi',
            path: '/wizzi'
        }

    controller${lparen} &ctrl )
        
        _ this.router.get(`/`, this.index)
        _ this.router.post(`${this.path}/alpha/:id`, this.test)
        
        ${'$'}append handlers

            handler${lparen} index )
                _ response.render
                    @ 'wizzi/index.html.ittf'
                    {
                        @ title 'Wizzi section'

            handler${lparen} test )
                _ response.render
                    @ 'wizzi/index.html.ittf'
                    {
                        @ title 'Wizzi section: ' + request.params.id