html
    $
        var md = {}

    +
    layout(&md)
        $append head-scripts
            < script
                + ${__INITIAL_DATA__}
        . flex-row flex-justify-center
            profile-sidebar(s)
            . flex-column width-full
                # root

        script
            src "/static/pageforms/main.bundle.js"            
                $*
                . flex-row flex-items-start
                    form 
                        class width-full
                        data-autosearch-results-container user-artifacts-list
                        @ aria-label Artifact productions
                        @ role search
                        action /production/artifact/search
                        accept-charset UTF-8
                        method get
                        . flex-row m-xxl
                            . flex-column width-full
                                . m-s 
                                    input 
                                        type search
                                        id your-repos-filter
                                        name q
                                        class form-control width-full
                                        placeholder Find an artifact production…
                                        autocomplete off
                                        @ aria-label Find an artifact production…
                                        value 
                                        data-throttled-autosubmit 
                            . flex-row
                                . flex-column
                                    . m-s
                                        select
                                            option Html
                                                value Html
                                            option Css
                                                value Css
                                . flex-column
                                    . m-s
                                        select
                                            option Last updated
                                                value last-updated
                                            option Stars
                                                value stars
                    . flex-row m-xxl
                        . flex-column m-s
                            a-icon( New, /artifact/new
                                $include assets/add.svg
                
                $foreach item in artifacts
                    . flex-row flex-items-start m-m
                        . flex-column border-b-s p-b-s width-full m-w-xxl
                            . font-xl
                                a ${item.name}
                                    $$ href /~~/${locals.user.username}/${item.name}
                                    href /~~/stfnbssl/${item.name}
                            . font-m m-b-m
                                + ${item.description}
                            . flex-row 
                                . font-m m-r-s
                                    + main ittf:
                                . font-m m-r-xl
                                    + ${item.mainIttf}
                                . font-m m-r-s
                                    + schema:
                                . font-m
                                    + ${item.wizziSchema}
                *$                                    