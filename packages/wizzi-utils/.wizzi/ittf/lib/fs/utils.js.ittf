							iif relFolder.length > 0
								then relFolder + '/' + name + '.' + mime
								else name + '.' + mime
			else
				return 
					{
						@ name ss.slice(0, ss.length-1).join('.')
						@ basename basename
						@ isIttfDocument false
						@ schema null
						@ mime ss[ss.length-1]
						@ relFolder relFolder
						@ fullPath filePath
						@ destBasename basename
						@ destRelPath
							iif relFolder.length > 0
								then relFolder + '/' + basename
								else basename

    function normalize
        param filepath
        return verify.replaceAll(filepath, '\\', '/')

	var DEFAULT_MIME
